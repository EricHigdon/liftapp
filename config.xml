<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.accordapp.lift" version="0.1.6" android-versionCode="11">
  <name>Lift</name>
  <description>Lift For Life Camps</description>
  <author href="http://accordapp.com" email="eric.s.higdon@gmail.com">Eric Higdon</author>
  <content src="index.html"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="prerendered-icon" value="false"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <preference name="StatusBarBackgroundColor" value="#000000"/>
  <preference name="StatusBarStyle" value="lightcontent" />
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="false"/>
  <preference name="auto-hide-splash-screen" value="false"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="false" />
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="FadeSplashScreenDuration" value="500"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <plugin name="org.apache.cordova.splashscreen"/>
  <plugin name="org.apache.cordova.statusbar"/>
  <plugin name="org.apache.cordova.device"/>
  <plugin name="org.apache.cordova.file"/>
  <plugin name="org.apache.cordova.file-transfer"/>
  <plugin name="cordova-plugin-headercolor"/>
  <plugin name="cordova-plugin-dialogs"/>
  <plugin name="cordova-plugin-media" spec="~2.4.1" />
  <plugin name="cordova-plugin-appversion" source="npm" spec="~1.0.0" />
  <plugin name="cordova-plugin-music-controls" source="npm" spec="~1.4.0" />
  <plugin name="remote-control" source="git" spec="https://github.com/shi11/RemoteControls.git" />
  <plugin name="phonegap-plugin-push" source="npm" spec="~1.8.0">
      <variable name="SENDER_ID" value="663980513133" />
  </plugin>
  
  <icon src="icon.png"/>
  <platform name="android">
	  <icon src="www/res/icon/android/icon-36-ldpi.png" qualifier="ldpi"/>
      <icon src="www/res/icon/android/icon-48-mdpi.png" qualifier="mdpi"/>
      <icon src="www/res/icon/android/icon-72-hdpi.png" qualifier="hdpi"/>
      <icon src="www/res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi"/>
  </platform>
  <platform name="ios">
      <icon src="www/res/icon/ios/icon-small.png" platform="ios" width="29" height="29" />
      <icon src="www/res/icon/ios/icon-40.png" platform="ios" width="40" height="40" />
      <icon src="www/res/icon/ios/icon-50.png" platform="ios" width="50" height="50"/>
      <icon src="www/res/icon/ios/icon-57.png" platform="ios" width="57" height="57"/>
      <icon src="www/res/icon/ios/icon-small-2x.png" platform="ios" width="58" height="58" />
      <icon src="www/res/icon/ios/icon-76.png" platform="ios" width="76" height="76"/>
      <icon src="www/res/icon/ios/icon-80.png" platform="ios" width="80" height="80"/>
      <icon src="www/res/icon/ios/icon-87.png" platform="ios" width="87" height="87"/>
      <icon src="www/res/icon/ios/icon-100.png" platform="ios" width="100" height="100"/>
      <icon src="www/res/icon/ios/icon-120.png" platform="ios" width="120" height="120"/>
      <icon src="www/res/icon/ios/icon-152.png" platform="ios" width="152" height="152"/>
      <icon src="www/res/icon/ios/icon-180.png" platform="ios" width="180" height="180"/>
      <icon src="www/res/icon/ios/icon-72.png" platform="ios" width="72" height="72"/>
      <icon src="www/res/icon/ios/icon-57-2x.png" platform="ios" width="114" height="114"/>
      <icon src="www/res/icon/ios/icon-72-2x.png" platform="ios" width="144" height="144"/>
  </platform>
  
  <splash src="splash.png" />
  <platform name="android">
      <splash src="www/res/screen/android/screen-ldpi-portrait.png" density="ldpi"/>
      <splash src="www/res/screen/android/screen-mdpi-portrait.png" density="mdpi"/>
      <splash src="www/res/screen/android/screen-hdpi-portrait.png" density="hdpi"/>
      <splash src="www/res/screen/android/screen-xhdpi-portrait.png" density="xhdpi"/>
  </platform>
  <platform name="ios">
      <splash src="www/res/screen/ios/screen-iphone-portrait.png" width="320" height="480" />
      <splash src="www/res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
      <splash src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
      <splash src="www/res/screen/ios/screen-iphone-portrait-667h.png" width="750" height="1334" />
      <splash src="www/res/screen/ios/screen-iphone-portrait-736h.png" width="1242" height="2208" />
      <splash src="www/res/screen/ios/screen-ipad-portrait.png" width="768" height="1024" />
      <splash src="www/res/screen/ios/screen-ipad-portrait-2x.png" width="1536" height="2048" />
  </platform>
  
  <access origin="*"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="cdvfile://*" />
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  
  <config-file platform="ios" parent="UIBackgroundModes" mode="replace">
    <array>
        <string>remote-notification</string>
        <string>audio</string>
    </array>
  </config-file>
  
</widget>
