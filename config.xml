<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="8" id="com.accordapp.lift" version="1.4.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
  <name>Engage Ministries</name>
  <description>Engage Ministries</description>
  <author email="eric.s.higdon@gmail.com" href="http://accordapp.com">Eric Higdon</author>
  <content src="index.html" />
  <preference name='phonegap-version' value='cli-7.0.1' />
  <engine name="ios" spec="latest" />
    
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="prerendered-icon" value="false"/>
  <preference name="stay-in-webview" value="false"/>
    
  <plugin name="cordova-plugin-appversion" spec="1.0.0" />
  <plugin name="cordova-plugin-device" spec="2.0.2" />
  <plugin name="cordova-plugin-dialogs" spec="2.0.1" />
  <plugin name="cordova-plugin-file" spec="6.0.1" />
  <plugin name="cordova-plugin-file-transfer" spec="1.7.1" />
  <plugin name="cordova-plugin-headercolor" spec="1.0" />
  <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
  <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
  <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <preference name="StatusBarBackgroundColor" value="#000000"/>
  <preference name="StatusBarStyle" value="lightcontent" />
  <preference name="StatusBarDefaultScrollToTop" value="true" />
    
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="false"/>
  <preference name="auto-hide-splash-screen" value="false"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="19"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="false" />
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="FadeSplashScreenDuration" value="500"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  
  <icon src="icon.png"/>
  <platform name="android">
      <icon src="www/res/icons/android/icon-36-ldpi.png" qualifier="ldpi"/>
      <icon src="www/res/icons/android/icon-48-mdpi.png" qualifier="mdpi"/>
      <icon src="www/res/icons/android/icon-72-hdpi.png" qualifier="hdpi"/>
      <icon src="www/res/icons/android/icon-96-xhdpi.png" qualifier="xhdpi"/>
  </platform>
  <platform name="ios">
      <icon src="www/res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
      <icon src="www/res/icons/ios/icon-40.png" platform="ios" width="40" height="40" />
      <icon src="www/res/icons/ios/icon-50.png" platform="ios" width="50" height="50"/>
      <icon src="www/res/icons/ios/icon-57.png" platform="ios" width="57" height="57"/>
      <icon src="www/res/icons/ios/icon-small-2x.png" platform="ios" width="58" height="58" />
      <icon src="www/res/icons/ios/icon-76.png" platform="ios" width="76" height="76"/>
      <icon src="www/res/icons/ios/icon-80.png" platform="ios" width="80" height="80"/>
      <icon src="www/res/icons/ios/icon-87.png" platform="ios" width="87" height="87"/>
      <icon src="www/res/icons/ios/icon-100.png" platform="ios" width="100" height="100"/>
      <icon src="www/res/icons/ios/icon-120.png" platform="ios" width="120" height="120"/>
      <icon src="www/res/icons/ios/icon-152.png" platform="ios" width="152" height="152"/>
      <icon src="www/res/icons/ios/icon-167.png" platform="ios" width="167" height="167"/>
      <icon src="www/res/icons/ios/icon-180.png" platform="ios" width="180" height="180"/>
      <icon src="www/res/icons/ios/icon-72.png" platform="ios" width="72" height="72"/>
      <icon src="www/res/icons/ios/icon-57-2x.png" platform="ios" width="114" height="114"/>
      <icon src="www/res/icons/ios/icon-72-2x.png" platform="ios" width="144" height="144"/>
  </platform>
  
  <splash src="splash.png" />
  <platform name="android">
      <splash src="www/res/screens/android/screen-ldpi-portrait.png" density="ldpi"/>
      <splash src="www/res/screens/android/screen-mdpi-portrait.png" density="mdpi"/>
      <splash src="www/res/screens/android/screen-hdpi-portrait.png" density="hdpi"/>
      <splash src="www/res/screens/android/screen-xhdpi-portrait.png" density="xhdpi"/>
  </platform>
  <platform name="ios">
      <splash src="www/res/screens/ios/Default@3x~universal~anyany.png" />
  </platform>
  
  <access origin="*"/>
  <allow-navigation href="https://www.youtube.com/*" />
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="cdvfile://*" />
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  
</widget>
